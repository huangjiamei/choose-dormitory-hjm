<?xml version="1.0" encoding="utf-8"?>
<!--查询个人信息-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="#104E8B"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/main_title_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="个人信息"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:id="@+id/main_btn_back"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back"/>

                <ImageView
                    android:id="@+id/main_btn_search"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#104E8B"
                    android:src="@drawable/search"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_title"
            android:orientation="vertical"
            android:background="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:showDividers="middle|beginning|end">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:color/white">

                                <TextView
                                    android:id="@+id/main_stuid_text"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="15dp"
                                    android:gravity="center_vertical"
                                    android:text="学号"
                                    android:textSize="20dp"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/main_stuid"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingRight="15dp"
                                    android:gravity="center_vertical"
                                    android:text="N/A"
                                    android:textSize="20dp"
                                    android:textColor="#878787"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:color/white">

                                <TextView
                                    android:id="@+id/main_stuname_text"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="15dp"
                                    android:gravity="center_vertical"
                                    android:text="姓名"
                                    android:textSize="20dp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:id="@+id/main_stuname"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingRight="15dp"
                                    android:gravity="center_vertical"
                                    android:text="N/A"
                                    android:textSize="20dp"
                                    android:textColor="#878787"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:color/white">

                                <TextView
                                    android:id="@+id/main_gender_text"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="15dp"
                                    android:gravity="center_vertical"
                                    android:text="性别"
                                    android:textSize="20dp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:id="@+id/main_gender"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingRight="15dp"
                                    android:gravity="center_vertical"
                                    android:text="N/A"
                                    android:textSize="20dp"
                                    android:textColor="#878787"/>

                        </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:showDividers="middle|beginning|end">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:color/white">

                                <TextView
                                    android:id="@+id/main_status_text"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="15dp"
                                    android:gravity="center_vertical"
                                    android:text="状态"
                                    android:textSize="20dp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:id="@+id/main_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingRight="15dp"
                                    android:gravity="center_vertical"
                                    android:text="N/A"
                                    android:textSize="20dp"
                                    android:textColor="#878787"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:color/white">

                                <TextView
                                    android:id="@+id/main_buildingnum_text"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="15dp"
                                    android:gravity="center_vertical"
                                    android:text="楼号"
                                    android:textSize="20dp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:id="@+id/main_buildingnum"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingRight="15dp"
                                    android:gravity="center_vertical"
                                    android:text="N/A"
                                    android:textSize="20dp"
                                    android:textColor="#878787"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:color/white">

                                <TextView
                                    android:id="@+id/main_dormitorynum_text"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="15dp"
                                    android:gravity="center_vertical"
                                    android:text="宿舍号"
                                    android:textSize="20dp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:id="@+id/main_dormitorynum"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingRight="15dp"
                                    android:gravity="center_vertical"
                                    android:text="N/A"
                                    android:textSize="20dp"
                                    android:textColor="#878787"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:color/white">

                                <TextView
                                    android:id="@+id/main_vcode_text"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="15dp"
                                    android:gravity="center_vertical"
                                    android:text="校验码"
                                    android:textSize="20dp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:id="@+id/main_vcode"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingRight="15dp"
                                    android:gravity="center_vertical"
                                    android:text="N/A"
                                    android:textSize="20dp"
                                    android:textColor="#878787"/>

                        </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/main_sspkumap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/sspku_map"/>

                </LinearLayout>

        </LinearLayout>

</RelativeLayout>
